{
    "name": "clean",
    "description": "Drop duplicates, enforce min/max bounds, remove physically impossible spikes",
    "params": {
        "drop_duplicates": {
            "type": "bool",
            "default": true
        },
        "domains": {
            "type": "dict",
            "default": {
                "bio_signal": {
                    "min_value": 0,
                    "max_value": 800,
                    "spike_window": 10,
                    "spike_threshold": 100
                },
                "environment": {
                    "min_value": -10.0,
                    "max_value": 50.0,
                    "spike_window": 7,
                    "spike_threshold": 5.0
                }
            }
        }
    }
}
